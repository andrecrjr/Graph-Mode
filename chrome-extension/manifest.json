{
    "manifest_version": 3,
    "name": "Graph Mode - Graph-View Notion Integration",
    "version": "1.0",
    "description": "Open Notion pages in Graph-View for better visualization",
    "action": {
        "default_popup": "popup/popup.html"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "storage"
    ],
    "background": {
        "service_worker": "background/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.notion.so/*",
                "*://*.notion.site/*"
            ],
            "js": [
                "content/content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "host_permissions": [
        "*://*.notion.so/*",
        "*://*.notion.site/*",
        "http://localhost:3000/*"
    ]
}